

<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />
<link href="~/Content/css/startmin.css" rel="stylesheet" />
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />

@model CRUD_Assignment.Models.ClientModel

@using (Html.BeginForm("CreateAPI", "Home", FormMethod.Post))
{
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Form</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Basic Form Elements
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <form role="form">

                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.ID, new { @class = "form-control", @placeholder = "Enter text", @type="hidden" })
                                                
                                            </div>

                                            <div class="form-group">
                                                <label>Name</label>
                                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter text" })
                                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group">
                                                <label>Mobile</label>
                                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Enter number" })
                                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group">
                                                <label>Email</label>
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter e-mail" })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group">
                                                <label>Address</label>
                                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Enter address" })
                                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group">
                                                <label>Salary</label>
                                                @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", @placeholder = "Enter number" })
                                                @Html.ValidationMessageFor(m => m.Salary, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group">
                                                <label>Designation</label>
                                                @Html.TextBoxFor(m => m.Designation, new { @class = "form-control", @placeholder = "Enter text" })
                                                @Html.ValidationMessageFor(m => m.Designation, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group">
                                                <label>Department</label>
                                                @Html.TextBoxFor(m => m.Department, new { @class = "form-control", @placeholder = "Enter text" })
                                                @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
                                            </div>
                                            <input type="submit" class="btn btn-success" value="Submit" />
                                            <button type="reset" class="btn btn-primary">Reset</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/js/jquery.min.js"></script>
<script src="~/Scripts/js/bootstrap.min.js"></script>
<script src="~/Scripts/js/metisMenu.min.js"></script>
<script src="~/Scripts/js/startmin.js"></script>




