
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />
<link href="~/Content/css/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/css/dataTables/dataTables.responsive.css" rel="stylesheet" />
<link href="~/Content/css/startmin.css" rel="stylesheet" />
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />

@model List<CRUD_Assignment.Models.ClientModel>
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Client Tables</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Alok kushwaha
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Mobile</th>
                                            <th>Email</th>
                                            <th>Address</th>
                                            <th>Salary</th>
                                            <th>Designation</th>
                                            <th>Department</th>
                                            <th>Update</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Name</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Email</td>
                                                <td>@item.Address</td>
                                                <td>@item.Salary</td>
                                                <td>@item.Designation</td>
                                                <td>@item.Department</td>
                                                <td><a class="fa fa-fw" href="@Url.Action("UpdateAPI", "Home", new { item.ID})">&#xf044</a></td>
                                                <td><a class="fa fa-fw" href="@Url.Action("DeleteAPI", "Home", new { item.ID})">&#xf1f8</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/js/jquery.min.js"></script>
<script src="~/Scripts/js/bootstrap.min.js"></script>
<script src="~/Scripts/js/metisMenu.min.js"></script>
<script src="~/Scripts/js/dataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/js/dataTables/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/js/startmin.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
