<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Content/css/timeline.css" rel="stylesheet" />
    <link href="~/Content/css/startmin.css" rel="stylesheet" />
    <link href="~/Content/css/morris.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />

</head>

<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="~/Home/Index">CRUD Application</a>
            </div>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <ul class="nav navbar-nav navbar-left navbar-top-links">
                <li><a href="~/Home/Index"><i class="fa fa-home fa-fw"></i> Home</a></li>
                <li><a href="~/Home/About"><i class=" fa-fw"></i> About</a></li>
                <li><a href="~/Home/Contact"><i class=" fa-fw"></i> Contact</a></li>
            </ul>

            <ul class="nav navbar-right navbar-top-links">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> @Session["Email"] <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="~/Home/UserProfile"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        @if (Session["Email"] == null)
                        {
                            <li>
                                <a href="~/Home/SignUp"><i class="fa fa-gear fa-fw"></i> SignUp</a>
                            </li>
                        }

                        <li class="divider"></li>
                        @if (Session["Email"] != null)
                        {
                            <li>
                                <a href="@Url.Action("LogOut", "Home")"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("SignIn", "Home")"><i class="fa fa-sign-out fa-fw"></i> LogIn</a>
                            </li>
                        }

                    </ul>
                </li>
            </ul>
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>

                        </li>
                        <li>
                            <a href="~/Home/Index"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                        <li>
                            <a href="~/Home/ReadAPI"><i class="fa fa-table fa-fw"></i> Client List</a>
                        </li>
                        <li>
                            <a href="~/Home/UserList"><i class="fa fa-table fa-fw"></i> User List</a>
                        </li>
                        <li>
                            <a href="~/Home/CreateAPI"><i class="fa fa-edit fa-fw"></i> Client Form</a>
                        </li>
                        <li>
                            <a href="~/Home/SignUp"><i class="fa fa-edit fa-fw"></i> User Form</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    @RenderBody()

    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/metisMenu.min.js"></script>
    <script src="~/Scripts/js/raphael.min.js"></script>
    <script src="~/Scripts/js/morris.min.js"></script>
    <script src="~/Scripts/js/morris-data.js"></script>
    <script src="~/Scripts/js/startmin.js"></script>

</body>
</html>
